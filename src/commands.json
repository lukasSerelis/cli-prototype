{
  "welcome": "Welcome to Juju CLI! Type 'help' to see available commands.",
  "variables": {
    "selectedController": "",
    "selectedModel": ""
  },
  "commands": {
    "juju": {
      "description": "Interact with Juju",
      "commands": {
        "ui": {
          "description": "Access Juju Dashboard UI",
          "handler": [
            {
              "component": "select",
              "name": "controllerChoice",
              "message": "Select a Juju controller:",
              "choices": [
                { "name": "aws-controller", "value": "aws-controller" },
                { "name": "gcp-controller", "value": "gcp-controller" },
                { "name": "azure-controller", "value": "azure-controller" },
                { "name": "local-controller", "value": "local-controller" }
              ]
            },
            {
              "component": "variable",
              "output": {
                "selectedController": "{{controllerChoice}}"
              }
            },
            {
              "component": "select",
              "name": "modelChoice",
              "message": "Select a Juju model:",
              "choices": [
                { "name": "default", "value": "default" },
                { "name": "production", "value": "production" },
                { "name": "development", "value": "development" },
                { "name": "testing", "value": "testing" }
              ]
            },
            {
              "component": "variable",
              "output": {
                "selectedModel": "{{modelChoice}}"
              }
            },
            {
              "component": "spinner",
              "output": [
                "Connecting to {{selectedController}} controller...",
                "Loading {{selectedModel}} model...",
                "Generating Juju Dashboard URL..."
              ],
              "duration": 2000
            },
            {
              "component": "table",
              "output": [
                ["Juju Dashboard UI", "URL"],
                ["Controller", "{{selectedController}}"],
                ["Model", "{{selectedModel}}"],
                ["Link", "https://{{selectedController}}.juju.ui/{{selectedModel}}"]
              ]
            },
            {
              "component": "text",
              "output": "âœ… Dashboard URL generated successfully!"
            }
          ]
        }
      }
    }
  }
}
