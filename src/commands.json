{
  "welcome": "Welcome to Juju CLI Prototype! Type 'help' to see available commands.",
  "variables": {
    "selectedController": "",
    "selectedModel": ""
  },
  "commands": {
    "juju": {
      "description": "Interact with Juju",
      "commands": {
        "ui": {
          "description": "Open Juju UI Dashboard",
          "handler": [
            {
              "component": "select",
              "name": "controller",
              "message": "Select a Juju controller:",
              "choices": [
                { "name": "production-controller", "value": "production-controller" },
                { "name": "staging-controller", "value": "staging-controller" },
                { "name": "testing-controller", "value": "testing-controller" }
              ]
            },
            {
              "component": "variable",
              "output": {
                "selectedController": "{{controller}}"
              }
            },
            {
              "component": "select",
              "name": "model",
              "message": "Select a Juju model:",
              "choices": [
                { "name": "default", "value": "default" },
                { "name": "frontend", "value": "frontend" },
                { "name": "backend", "value": "backend" }
              ]
            },
            {
              "component": "variable",
              "output": {
                "selectedModel": "{{model}}"
              }
            },
            {
              "component": "spinner",
              "output": [
                "Fetching Juju dashboard URL",
                "Connecting to controller",
                "Preparing dashboard"
              ],
              "duration": 2000
            },
            {
              "component": "table",
              "output": [
                ["Juju Dashboard UI", "Details"],
                ["Controller", "{{selectedController}}"],
                ["Model", "{{selectedModel}}"],
                ["URL", "https://{{selectedController}}.juju.ui/{{selectedModel}}"]
              ]
            },
            {
              "component": "text",
              "output": "Successfully generated the Juju Dashboard URL for controller '{{selectedController}}' and model '{{selectedModel}}'."
            }
          ]
        }
      }
    }
  }
}
