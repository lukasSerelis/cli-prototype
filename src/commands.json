{
  "welcome": "Welcome to my CLI prototype!",
  "variables": {},
  "commands": {
    "juju ui": {
      "description": "Open Juju dashboard UI",
      "options": {
        "dashboard": {
          "description": "Dashboard URL",
          "type": "string"
        }
      },
      "handler": [
        {
          "component": "select",
          "name": "controller",
          "message": "Select a controller:",
          "choices": [
            "controller-aws",
            "controller-gcp",
            "controller-azure"
          ]
        },
        {
          "component": "select",
          "name": "model",
          "message": "Select a model:",
          "choices": [
            "model-production",
            "model-staging",
            "model-development"
          ]
        },
        {
          "component": "table",
          "output": [
            [
              "juju dashboard ui"
            ],
            [
              "https://{{controller}}.juju-dashboard.com/model/{{model}}"
            ]
          ]
        }
      ]
    }
  }
}
