{
  "welcome": "Welcome to Juju CLI! Type 'help' to see available commands.",
  "commands": {
    "juju": {
      "description": "Execute juju commands",
      "commands": {
        "ui": {
          "description": "Access the Juju web UI",
          "handler": [
            {
              "component": "select",
              "name": "controller",
              "message": "Select a controller:",
              "choices": [
                {
                  "name": "aws-controller",
                  "value": "aws-controller"
                },
                {
                  "name": "gcp-controller",
                  "value": "gcp-controller"
                },
                {
                  "name": "azure-controller",
                  "value": "azure-controller"
                },
                {
                  "name": "local-controller",
                  "value": "local-controller"
                }
              ]
            },
            {
              "component": "select",
              "name": "model",
              "message": "Select a model:",
              "choices": [
                {
                  "name": "default",
                  "value": "default"
                },
                {
                  "name": "production",
                  "value": "production"
                },
                {
                  "name": "development",
                  "value": "development"
                },
                {
                  "name": "testing",
                  "value": "testing"
                }
              ]
            },
            {
              "component": "spinner",
              "output": [
                "Connecting to {{controller}}",
                "Loading {{model}} model",
                "Generating dashboard link"
              ],
              "duration": 2000
            },
            {
              "component": "table",
              "output": [
                [
                  "Juju Dashboard UI"
                ],
                [
                  "https://{{controller}}.juju.io/{{model}}"
                ]
              ]
            }
          ]
        }
      }
    },
    "Hello!": {
      "description": "Says hi",
      "handler": [
        {
          "component": "text",
          "output": "Hello!"
        },
        {
          "component": "text",
          "output": "What's your name?"
        },
        {
          "component": "input",
          "name": "userName",
          "message": "My name:"
        },
        {
          "component": "text",
          "output": "Hello {{userName}}"
        }
      ]
    }
  }
}
