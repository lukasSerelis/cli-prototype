{
  "welcome": "Welcome to Juju CLI! Type 'help' to see available commands.",
  "variables": {
    "controller": "",
    "model": "",
    "name": ""
  },
  "commands": {
    "juju": {
      "description": "Execute juju commands",
      "commands": {
        "ui": {
          "description": "Access the Juju web UI",
          "handler": [
            {
              "component": "select",
              "name": "chosenController",
              "message": "Select a controller:",
              "choices": [
                {
                  "name": "aws-controller",
                  "value": "aws-controller"
                },
                {
                  "name": "gcp-controller",
                  "value": "gcp-controller"
                },
                {
                  "name": "azure-controller",
                  "value": "azure-controller"
                },
                {
                  "name": "local-controller",
                  "value": "local-controller"
                }
              ]
            },
            {
              "component": "variable",
              "output": {
                "controller": "{{chosenController}}"
              }
            },
            {
              "component": "select",
              "name": "chosenModel",
              "message": "Select a model:",
              "choices": [
                {
                  "name": "default",
                  "value": "default"
                },
                {
                  "name": "production",
                  "value": "production"
                },
                {
                  "name": "development",
                  "value": "development"
                },
                {
                  "name": "testing",
                  "value": "testing"
                }
              ]
            },
            {
              "component": "variable",
              "output": {
                "model": "{{chosenModel}}"
              }
            },
            {
              "component": "spinner",
              "output": [
                "Connecting to {{controller}}",
                "Loading {{model}} model",
                "Generating dashboard link"
              ],
              "duration": 2000
            },
            {
              "component": "table",
              "output": [
                [
                  "Juju Dashboard UI",
                  "Details"
                ],
                [
                  "Controller",
                  "{{controller}}"
                ],
                [
                  "Model",
                  "{{model}}"
                ],
                [
                  "URL",
                  "https://{{controller}}.juju.io/{{model}}"
                ]
              ]
            },
            {
              "component": "text",
              "output": "âœ… Juju Dashboard URL successfully generated!"
            }
          ]
        }
      }
    }
  }
}
